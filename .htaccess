# Enable Rewrite Engine
RewriteEngine On

# Exclude assets folder from redirect
RewriteCond %{REQUEST_URI} !^/assets/
RewriteCond %{REQUEST_URI} !^/app/
RewriteCond %{REQUEST_URI} !^/templates/
RewriteCond %{REQUEST_URI} !^/config/
RewriteCond %{REQUEST_URI} !^/database/
RewriteCond %{REQUEST_URI} !^/public/
RewriteCond %{REQUEST_URI} !^/uploads/

# Redirect root to public folder
RewriteRule ^$ public/ [L]
RewriteRule ^(.*)$ public/$1 [L]

# Prevent direct access to app and templates folders
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_URI} ^/(app|templates|config)/
    RewriteRule ^(.*)$ - [F,L]
</IfModule>

# Prevent direct access to config files
<FilesMatch "^(config|database)\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Security Headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# PHP Settings
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

